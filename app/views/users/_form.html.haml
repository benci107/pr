.alert.alert-warning
    = flash[:error]
    %br
    = @user.errors.full_messages
= form_for @user do |form|
    .form-group
        =label_tag "first_name"
        =form.text_field :first_name, class: "form-control", id: "first_name"
    .form-group
        =label_tag "last_name"
        =form.text_field :last_name, class: "form-control", id: "last_name"
    .form-group
        =label_tag "organization_id"
        =form.select :organization_id , options_for_select(Organization.all.map{|o|[o.name, o.id] } ),{}, class: "form-select", id: "organization_id"

        =form.submit class: "btn btn-success"