    %tbody
        - @users.each do |user|
            %tr
            %td=user.id
            %td=user.first_name 
            %td=user.last_name
            %td=user.organization&.name
            %td=user_full_name(user.first_name, user.last_name)
            %td 
                %a.btn.btn-primary{href: user_path(user),target: "_blank",data:{ method: :show} }="Detail"
            %td   
                %a.btn.btn-primary{href: edit_user_path(user),target: "_blank"}="Edit"
            %td=button_to "Delete",user_path(user), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-danger"
            %td=button_to "wakeuptest",wakeup_user_path(user), method: :post, class: "btn btn-warning"